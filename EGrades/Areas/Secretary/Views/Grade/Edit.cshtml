@model EGrades.Models.ViewModels.GradeFormViewModel

@{
    ViewData["Title"] = @Model.Title;
    Layout = "~/Areas/Secretary/Views/Shared/_SecretaryLayout.cshtml";
}

<h1>@Model.Title</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Grade" asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <input asp-for="Course" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Student" class="control-label"></label>
                <input asp-for="Student" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AcademicPeriod" class="control-label"></label>
                <input asp-for="AcademicPeriod" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ExamPeriod" class="control-label"></label>
                <select asp-for="ExamPeriod" asp-items="Model.ExamPeriodList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExamDate" class="control-label"></label>
                <input asp-for="ExamDate" class="form-control" />
                <span asp-validation-for="ExamDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            @Html.HiddenFor(g => g.Id)
            <div class="form-group">
                <input type="submit" value="Καταχώρηση" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<a class="btn btn-primary" href="javascript:history.go(-1)" role="button">Πίσω</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_FormLayout");

        <script>
            $(document).ready(function () {
                $("#ExamDate").datetimepicker(
                    {
                        locale: "el",
                        format: "d-m-Y"
                    });
            });
        </script>
    }
}