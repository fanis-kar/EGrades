@model EGrades.Models.ViewModels.InstructorDetailsViewModel

@{
    ViewData["Title"] = @Model.Title;
}

<h1>Στοιχεία Καθηγητή</h1>

<hr />

<div class="form-group row">
    <div class="col-2">
        <label asp-for="Instructor.RegistrationNumber"></label>
    </div>
    <div class="col-5">
        <input asp-for="Instructor.RegistrationNumber" disabled class="form-control" />
    </div>
</div>

<div class="form-group row">
    <div class="col-2">
        <label asp-for="Instructor.FullName"></label>
    </div>
    <div class="col-5">
        <input asp-for="Instructor.FullName" disabled class="form-control" />
    </div>
</div>

<div class="form-group row">
    <div class="col-2">
        <label asp-for="Instructor.Gender"></label>
    </div>
    <div class="col-5">
        <input asp-for="Instructor.Gender" disabled class="form-control" />
    </div>
</div>

<div class="form-group row">
    <div class="col-2">
        <label asp-for="Instructor.FatherName"></label>
    </div>
    <div class="col-5">
        <input asp-for="Instructor.FatherName" disabled class="form-control" />
    </div>
</div>

<div class="form-group row">
    <div class="col-2">
        <label asp-for="Instructor.MotherName"></label>
    </div>
    <div class="col-5">
        <input asp-for="Instructor.MotherName" disabled class="form-control" />
    </div>
</div>

<div class="form-group row">
    <div class="col-2">
        <label asp-for="Instructor.Address"></label>
    </div>
    <div class="col-5">
        <input asp-for="Instructor.Address" disabled class="form-control" />
    </div>
</div>

<div class="form-group row">
    <div class="col-2">
        <label asp-for="Instructor.BirthDate"></label>
    </div>
    <div class="col-5">
        <input asp-for="Instructor.BirthDate" disabled class="form-control" />
    </div>
</div>

<div class="form-group row">
    <div class="col-2">
        <label asp-for="Instructor.HireDate"></label>
    </div>
    <div class="col-5">
        <input asp-for="Instructor.HireDate" disabled class="form-control" />
    </div>
</div>

@{
    if (Model.Courses.Count() > 0)
    {
        <hr />
        <h3>Μαθήματα:</h3>

        foreach (var course in Model.Courses)
        {
            <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Course.Id">@course.Course.Title</a>
            <br />
        }
    }
}

<hr />

<a class="btn btn-primary" href="javascript:history.go(-1)" role="button">Πίσω</a>