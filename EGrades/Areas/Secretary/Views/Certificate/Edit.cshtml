@model EGrades.Models.ViewModels.ProcessingCertificateFormViewModel

@{
    ViewData["Title"] = @Model.Title;
    Layout = "~/Areas/Secretary/Views/Shared/_SecretaryLayout.cshtml";
}

<h1>@Model.Title</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Certificate" asp-action="Save">

            <div class="form-group">
                <label asp-for="Student" class="control-label"></label>
                <input asp-for="Student" disabled class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Certificate" class="control-label"></label>
                <input asp-for="Certificate" disabled class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="RequestedDate" class="control-label"></label>
                <input asp-for="RequestedDate" disabled class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Model.StatusList" class="form-control"></select>
            </div>

            @Html.HiddenFor(sc => sc.Id)

            <div class="form-group">
                <input type="submit" value="Καταχώρηση" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<a class="btn btn-primary" href="javascript:history.go(-1)" role="button">Πίσω</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_FormLayout");
    }
}

